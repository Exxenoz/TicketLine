<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.customers.CustomerController" spacing="5.0">
    <children>
        <fx:include fx:id="tabHeader" source="/fxml/tabHeader.fxml" />
