<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>


<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.reservations.seating.ReservationsSearchController">

    <children>
        <fx:include fx:id="tabHeader" source="../tabHeader.fxml"/>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <children>
                <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <TableView fx:id="foundReservationsTableView" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="reservationIDColumn" maxWidth="1.7976931348623157E308"
                                                     prefWidth="168.0" text="%bookings.table.reservationID"/>
                                        <TableColumn fx:id="eventColumn" maxWidth="1.7976931348623157E308"
                                                     prefWidth="195.0" text="%bookings.table.event"/>
                                        <TableColumn fx:id="customerColumn" maxWidth="1.7976931348623157E308"
                                                     prefWidth="244.0" text="%bookings.table.customer"/>
                                        <TableColumn fx:id="paidColumn" maxWidth="1.7976931348623157E308"
                                                     minWidth="-1.0" prefWidth="209.0" text="%bookings.table.paid"/>
                                    </columns>
                                </TableView>
                                <Button fx:id="showReservationsButtons" disable="false" mnemonicParsing="false"
                                        onAction="#showDetails" text="%bookings.main.button.details" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                        <VBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Accordion maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                           prefHeight="546.0" prefWidth="292.0" VBox.vgrow="ALWAYS">
                                    <panes>
                                        <TitledPane animated="false" text="%bookings.main.search.eventperformance">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                                            prefWidth="200.0">
                                                    <children>
                                                        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
                                                            <children>
                                                                <Label text="%bookings.search.eventname"/>
                                                                <TextField fx:id="eventNameField"/>
                                                                <Label text="%bookings.search.customername"/>
                                                                <TextField fx:id="customerNameField"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" text="%bookings.main.search.performancenr">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                                            prefWidth="200.0">
                                                    <children>
                                                        <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                                            <children>
                                                                <Label text="%bookings.search.performanceid"/>
                                                                <TextField fx:id="performanceNrField"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                    </panes>
                                </Accordion>
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchForReservations"
                                        text="%bookings.main.button.search" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets bottom="10.0" right="10.0"/>
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets right="10.0"/>
            </VBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>