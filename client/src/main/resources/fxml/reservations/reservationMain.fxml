<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="1100.0" spacing="5.0" style="-fx-background-color: derive(#3c3f41, 25%);"
      xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.reservations.ReservationsController">
    <children>
        <VBox fx:id="content" prefHeight="700.0" prefWidth="1100.0" spacing="5.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 3 3 3 3;" VBox.vgrow="ALWAYS">
            <children>
                <fx:include fx:id="tabHeader" source="../tabHeader.fxml" />
                <Separator />
                <HBox>
                    <children>
                        <Label contentDisplay="TOP" prefHeight="27.0" text="%bookings.main.activefilters"/>
                        <Label prefWidth="10.0"/>
                        <Label fx:id="activeFiltersListLabel" prefHeight="27.0"
                               text="%bookings.main.criteria.placeholder"/>
                        <ButtonBar HBox.hgrow="ALWAYS">
                            <buttons>
                                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearFilters"
                                        text="%bookings.main.button.clear" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets right="16.0"/>
                                    </VBox.margin>
                                </Button>
                            </buttons>
                        </ButtonBar>
                    </children>
                </HBox>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <TableView fx:id="foundReservationsTableView" maxHeight="1.7976931348623157E308"
                                                   maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"
                                                   VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="reservationIDColumn" sortable="false"
                                                             text="%bookings.table.reservationID"/>
                                                <TableColumn fx:id="eventColumn" sortable="false"
                                                             text="%bookings.table.event"/>
                                                <TableColumn fx:id="customerColumn" sortable="false"
                                                             text="%bookings.table.customer"/>
                                                <TableColumn fx:id="paidColumn" sortable="false"
                                                             text="%bookings.table.paid"/>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                        <ButtonBar maxHeight="35.0" prefHeight="35.0" VBox.vgrow="ALWAYS">
                                            <buttons>
                                                <Button fx:id="showReservationDetailsButton" disable="false"
                                                        mnemonicParsing="false" onAction="#showReservationDetailsButton"
                                                        text="%bookings.main.button.details" HBox.hgrow="ALWAYS"
                                                        VBox.vgrow="ALWAYS">
                                                    <VBox.margin>
                                                        <Insets right="16.0" />
                                                    </VBox.margin>
                                                </Button>
                                                <Button fx:id="cancelReservationButton" mnemonicParsing="false"
                                                        onAction="#cancelReservation"
                                                        text="%bookings.main.cancelReservationsButton"/>
                                            </buttons>
                                        </ButtonBar>
                                    </children>
                                </VBox>
                                <VBox alignment="TOP_RIGHT" maxWidth="-Infinity" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Accordion maxHeight="1.7976931348623157E308" maxWidth="292.0" prefHeight="546.0" prefWidth="292.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                            <panes>
                                                <TitledPane animated="false" text="%bookings.main.search.eventperformance">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                                            <children>
                                                                <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
                                                                    <children>
                                                                        <Label text="%bookings.search.performancename"/>
                                                                        <TextField fx:id="performanceNameField"/>
                                                                        <Label
                                                                            text="%bookings.search.customerfirstname"/>
                                                                        <TextField fx:id="customerFirstNameField"/>
                                                                        <Label
                                                                            text="%bookings.search.customerlastname"/>
                                                                        <TextField fx:id="customerLastNameField"/>
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </TitledPane>
                                                <TitledPane animated="false" text="%bookings.main.search.reservationnr">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                                            <children>
                                                                <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                                                    <children>
                                                                        <Label
                                                                            text="%bookings.main.search.reservationnr"/>
                                                                        <TextField fx:id="reservationNrField"/>
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </TitledPane>
                                            </panes>
                                        </Accordion>
                                        <ButtonBar maxHeight="35.0" prefHeight="35.0" VBox.vgrow="ALWAYS">
                                            <buttons>
                                                <Button fx:id="searchButton" disable="false" mnemonicParsing="false"
                                                        onAction="#searchForReservations"
                                                        text="%bookings.main.button.search">
                                                    <VBox.margin>
                                                        <Insets right="16.0" />
                                                    </VBox.margin>
                                                </Button>
                                            </buttons>
                                        </ButtonBar>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
