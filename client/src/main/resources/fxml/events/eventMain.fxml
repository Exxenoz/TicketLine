<?import java.net.URL?>
<TabPane fx:id="eventTabPane" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@/css/secondLevelTabs.css" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.events.EventController">
    <stylesheets>
        <URL value="@/css/events.css"/>
    </stylesheets>
    <tabs>
    <Tab text="All Events">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <Accordion layoutX="829.0" layoutY="42.0" prefHeight="546.0" prefWidth="218.0">
                    <panes>
                      <TitledPane animated="false" text="Artist">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
                                       <children>
                                          <Label text="First Name:" />
                                          <TextField fx:id="artistFirstNameTextField" />
                                          <Label text="Last Name:" />
                                          <TextField fx:id="artistLastNameTextField" />
                                       </children>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                        </content>
                      </TitledPane>
                      <TitledPane animated="false" text="Event">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                       <children>
                                          <Label text="Event Name:" />
                                          <TextField fx:id="eventNameTextField" />
                                          <Label text="Length in Minutes:" />
                                          <TextField fx:id="lengthInMinutesTextField" />
                                          <Label text="Seating:" />
                                          <HBox spacing="15.0">
                                             <children>
                                                <RadioButton fx:id="seatingYesButton" mnemonicParsing="false" text="Yes">
                                                   <toggleGroup>
                                                      <ToggleGroup fx:id="seatingToggleGroup" />
                                                   </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="seatingNoButton" mnemonicParsing="false" text="No" toggleGroup="$seatingToggleGroup" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                        </content>
                      </TitledPane>
                      <TitledPane animated="false" text="Time">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                       <children>
                                          <Label text="Begin:" />
                                          <DatePicker fx:id="beginTimeDatePicker" prefHeight="26.0" prefWidth="177.0" />
                                          <HBox spacing="15.0">
                                             <children>
                                                <Spinner fx:id="beginTimeHourSpinner" prefHeight="26.0" prefWidth="71.0" />
                                                <Label prefHeight="28.0" prefWidth="1.0" text=":" />
                                                <Spinner fx:id="beginTimeMinuteSpinner" prefHeight="26.0" prefWidth="71.0" />
                                             </children>
                                          </HBox>
                                          <Label text="Price:" />
                                          <TextField fx:id="priceTextField" prefHeight="26.0" prefWidth="73.0" />
                                          <HBox spacing="15.0" />
                                       </children>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                        </content>
                      </TitledPane>
                        <TitledPane animated="false" layoutX="10.0" layoutY="581.0" text="Location">
                           <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="333.0" prefWidth="216.0">
                                 <children>
                                    <VBox layoutX="7.0" layoutY="10.0" prefHeight="248.0" prefWidth="198.0" spacing="10.0">
                                       <children>
                                          <Label text="Location Name:" />
                                          <TextField fx:id="locationNameTextField" prefHeight="26.0" prefWidth="73.0" />
                                          <Label text="Street:" />
                                          <HBox spacing="15.0" />
                                          <TextField fx:id="streetTextField" prefHeight="26.0" prefWidth="73.0" />
                                          <Label text="City:" />
                                          <TextField fx:id="cityTextField" prefHeight="26.0" prefWidth="73.0" />
                                          <Label text="Postal Code:" />
                                          <TextField fx:id="postalCodeTextField" prefHeight="26.0" prefWidth="73.0" />
                                          <Label text="Country:" />
                                          <TextField fx:id="countryTextField" prefHeight="26.0" prefWidth="73.0" />
                                       </children>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                           </content>
                        </TitledPane>
                    </panes>
                  </Accordion>
                  <TableView fx:id="foundEventsTableView" layoutX="13.0" layoutY="42.0" prefHeight="546.0" prefWidth="817.0">
                    <columns>
                      <TableColumn fx:id="nameColumn" prefWidth="168.0" text="Name" />
                      <TableColumn fx:id="eventColumn" prefWidth="195.0" text="Event" />
                        <TableColumn fx:id="startTimeColumn" prefWidth="211.0" text="Start Time" />
                        <TableColumn fx:id="locationColumn" prefWidth="242.0" text="Location" />
                    </columns>
                  </TableView>
                  <Label layoutX="14.0" layoutY="14.0" text="Active Filters:" />
                  <Label fx:id="activeFiltersListLabel" layoutX="112.0" layoutY="14.0" text="Criteria 1, Criteria 2,...." />
                  <Button fx:id="clearButton" layoutX="987.0" layoutY="9.0" mnemonicParsing="false" onAction="#showAllPerformances" text="Clear" />
                  <HBox layoutX="779.0" layoutY="601.0" spacing="140.0">
                     <children>
                        <Button fx:id="bookButton" mnemonicParsing="false" onAction="#bookPerformance" text="Book" />
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchForPerformances" text="Search" />
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
      </content>
    </Tab>
    <Tab text="Top 10">
      <content>
            <VBox>
               <children>
                  <GridPane VBox.vgrow="NEVER">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                         <ChoiceBox fx:id="monthChoiceBox" prefWidth="150.0" GridPane.rowIndex="1">
                         </ChoiceBox>
                         <ChoiceBox fx:id="categoryChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                         </ChoiceBox>
                        <Button fx:id="showTopTenButton" mnemonicParsing="false" onAction="#showTopTenClicked" text="%events.main.button.show" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label text="%events.main.month">
                           <font>
                              <Font name="System Bold" size="19.0" />
                           </font>
                        </Label>
                        <Label text="%events.main.categories" GridPane.columnIndex="1">
                           <font>
                              <Font name="System Bold" size="19.0" />
                           </font>
                        </Label>
                     </children>
                  </GridPane>
                  <BarChart fx:id="topTenBarChart" animated="false">
                    <xAxis>
                      <CategoryAxis fx:id="barAxisX" label="Events" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis fx:id="barAxisY" label="%events.main.ticket_sales" side="LEFT" />
                    </yAxis>
                  </BarChart>
                  <HBox spacing="15.0">
                     <children>
                        <Label text="Event:">
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="topTenEventChoiceBox" prefWidth="150.0" />
                        <Button fx:id="bookTopTenEventButton" disable="true" mnemonicParsing="false" onAction="#bookTopTenEvent" text="%events.main.button.book" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" top="30.0" />
               </padding>
            </VBox>
      </content>
    </Tab>
  </tabs>
</TabPane>
