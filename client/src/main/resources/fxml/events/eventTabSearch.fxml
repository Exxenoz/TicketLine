<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0"
      xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.events.EventSearchController">
    <children>
        <HBox>
            <children>
                <Label contentDisplay="TOP" prefHeight="25.0" prefWidth="89.0" text="Active Filters:"/>
                <Label fx:id="activeFiltersListLabel" prefHeight="27.0" prefWidth="150.0"
                       text="Criteria 1, Criteria 2,...."/>
                <Button fx:id="clearButton" alignment="TOP_CENTER" mnemonicParsing="false"
                        onAction="#showAllPerformances" text="Clear"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </VBox.margin>
        </HBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <children>
                <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <TableView fx:id="foundEventsTableView" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" maxWidth="1.7976931348623157E308"
                                                     prefWidth="168.0" text="Name"/>
                                        <TableColumn fx:id="eventColumn" maxWidth="1.7976931348623157E308"
                                                     prefWidth="195.0" text="Event"/>
                                        <TableColumn fx:id="startTimeColumn" maxWidth="1.7976931348623157E308"
                                                     prefWidth="244.0" text="Start Time"/>
                                        <TableColumn fx:id="locationColumn" maxWidth="1.7976931348623157E308"
                                                     minWidth="-1.0" prefWidth="209.0" text="Location"/>
                                    </columns>
                                </TableView>
                                <Button fx:id="bookButton" disable="false" mnemonicParsing="false"
                                        onAction="#bookPerformance" text="Book" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                        <VBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Accordion maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                           prefHeight="546.0" prefWidth="292.0" VBox.vgrow="ALWAYS">
                                    <panes>
                                        <TitledPane animated="false" text="Artist">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                                            prefWidth="200.0">
                                                    <children>
                                                        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
                                                            <children>
                                                                <Label text="First Name:"/>
                                                                <TextField fx:id="artistFirstNameTextField"/>
                                                                <Label text="Last Name:"/>
                                                                <TextField fx:id="artistLastNameTextField"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" text="Event">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                                            prefWidth="200.0">
                                                    <children>
                                                        <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                                            <children>
                                                                <Label text="Event Name:"/>
                                                                <TextField fx:id="eventNameTextField"/>
                                                                <Label text="Length in Minutes:"/>
                                                                <TextField fx:id="lengthInMinutesTextField"/>
                                                                <Label text="Seating:"/>
                                                                <HBox spacing="15.0">
                                                                    <children>
                                                                        <RadioButton fx:id="seatingYesButton"
                                                                                     mnemonicParsing="false" text="Yes">
                                                                            <toggleGroup>
                                                                                <ToggleGroup
                                                                                    fx:id="seatingToggleGroup"/>
                                                                            </toggleGroup>
                                                                        </RadioButton>
                                                                        <RadioButton fx:id="seatingNoButton"
                                                                                     mnemonicParsing="false" text="No"
                                                                                     toggleGroup="$seatingToggleGroup"/>
                                                                    </children>
                                                                </HBox>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" text="Time">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                                            prefWidth="200.0">
                                                    <children>
                                                        <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                                            <children>
                                                                <Label text="Begin:"/>
                                                                <DatePicker fx:id="beginTimeDatePicker"
                                                                            prefHeight="26.0" prefWidth="177.0"/>
                                                                <HBox spacing="15.0">
                                                                    <children>
                                                                        <Spinner fx:id="beginTimeHourSpinner"
                                                                                 prefHeight="26.0" prefWidth="71.0"/>
                                                                        <Label prefHeight="28.0" prefWidth="1.0"
                                                                               text=":"/>
                                                                        <Spinner fx:id="beginTimeMinuteSpinner"
                                                                                 prefHeight="26.0" prefWidth="71.0"/>
                                                                    </children>
                                                                </HBox>
                                                                <Label text="Price:"/>
                                                                <TextField fx:id="priceTextField" prefHeight="26.0"
                                                                           prefWidth="73.0"/>
                                                                <HBox spacing="15.0"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" layoutX="10.0" layoutY="581.0" text="Location">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="333.0"
                                                            prefWidth="216.0">
                                                    <children>
                                                        <VBox layoutX="7.0" layoutY="10.0" prefHeight="248.0"
                                                              prefWidth="198.0" spacing="10.0">
                                                            <children>
                                                                <Label text="Location Name:"/>
                                                                <TextField fx:id="locationNameTextField"
                                                                           prefHeight="26.0" prefWidth="73.0"/>
                                                                <Label text="Street:"/>
                                                                <HBox spacing="15.0"/>
                                                                <TextField fx:id="streetTextField" prefHeight="26.0"
                                                                           prefWidth="73.0"/>
                                                                <Label text="City:"/>
                                                                <TextField fx:id="cityTextField" prefHeight="26.0"
                                                                           prefWidth="73.0"/>
                                                                <Label text="Postal Code:"/>
                                                                <TextField fx:id="postalCodeTextField" prefHeight="26.0"
                                                                           prefWidth="73.0"/>
                                                                <Label text="Country:"/>
                                                                <TextField fx:id="countryTextField" prefHeight="26.0"
                                                                           prefWidth="73.0"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                    </panes>
                                </Accordion>
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchForPerformances"
                                        text="Search" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets bottom="10.0" right="10.0"/>
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets right="10.0"/>
            </VBox.margin>
        </VBox>
    </children>
</VBox>
