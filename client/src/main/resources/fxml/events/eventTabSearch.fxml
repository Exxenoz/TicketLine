<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" style="-fx-background-color: derive(#3c3f41, 25%);" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.events.EventSearchController">
    <children>
        <VBox spacing="5.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 0 3 3 3;" VBox.vgrow="ALWAYS">
            <children>
                <fx:include fx:id="tabHeader" source="../tabHeader.fxml" />
                <Separator />
                <HBox>
                    <children>
                        <Label contentDisplay="TOP" prefHeight="27.0" text="%events.main.activefilters" />
                        <Label prefWidth="10.0" />
                        <Label fx:id="activeFiltersListLabel" prefHeight="27.0" text="Criteria 1, Criteria 2,...." />
                        <ButtonBar HBox.hgrow="ALWAYS">
                            <buttons>
                                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#showAllPerformances" text="%events.main.button.clear" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets right="16.0" />
                                    </VBox.margin>
                                </Button>
                            </buttons>
                        </ButtonBar>
                    </children>
                </HBox>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <TableView fx:id="foundEventsTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="nameColumn" sortable="false" text="%events.table.name" />
                                                <TableColumn fx:id="eventColumn" sortable="false" text="%events.table.event" />
                                                <TableColumn fx:id="startTimeColumn" sortable="false" text="%events.table.starttime" />
                                                <TableColumn fx:id="locationColumn" sortable="false" text="%events.table.location" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                        <ButtonBar maxHeight="35.0" prefHeight="35.0" VBox.vgrow="ALWAYS">
                                            <buttons>
                                                <Button fx:id="bookButton" disable="false" mnemonicParsing="false" onAction="#bookPerformance" text="%events.main.button.book" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                                    <VBox.margin>
                                                        <Insets bottom="16.0" />
                                                    </VBox.margin>
                                                </Button>
                                            </buttons>
                                        </ButtonBar>
                                    </children>
                                </VBox>
                                <VBox alignment="TOP_RIGHT" maxWidth="-Infinity" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Accordion maxHeight="1.7976931348623157E308" maxWidth="292.0" prefWidth="292.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                            <panes>
                                                <TitledPane animated="false" text="%events.main.search.artist">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                                            <children>
                                                                <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
                                                                    <children>
                                                                        <Label text="%events.search.artistfirstname" />
                                                                        <TextField fx:id="artistFirstNameTextField" />
                                                                        <Label text="%events.search.artistlastname" />
                                                                        <TextField fx:id="artistLastNameTextField" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </TitledPane>
                                                <TitledPane animated="false" text="%events.main.search.event">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                                            <children>
                                                                <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                                                    <children>
                                                                        <Label text="%events.search.eventname" />
                                                                        <TextField fx:id="eventNameTextField" />
                                                                        <Label text="%events.search.length" />
                                                                        <TextField fx:id="lengthInMinutesTextField" />
                                                                        <Label text="%events.search.seating" />
                                                                        <HBox spacing="15.0">
                                                                            <children>
                                                                                <RadioButton fx:id="seatingYesButton" mnemonicParsing="false" text="%events.search.seatingyes">
                                                                                    <toggleGroup>
                                                                                        <ToggleGroup fx:id="seatingToggleGroup" />
                                                                                    </toggleGroup>
                                                                                </RadioButton>
                                                                                <RadioButton fx:id="seatingNoButton" mnemonicParsing="false" text="%events.search.seatingno" toggleGroup="$seatingToggleGroup" />
                                                                            </children>
                                                                        </HBox>
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </TitledPane>
                                                <TitledPane animated="false" text="%events.main.search.time">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                                            <children>
                                                                <VBox layoutX="10.0" layoutY="9.0" spacing="10.0">
                                                                    <children>
                                                                        <Label text="%events.search.begintime" />
                                                                        <DatePicker fx:id="beginTimeDatePicker" prefHeight="26.0" prefWidth="177.0" />
                                                                        <HBox spacing="15.0">
                                                                            <children>
                                                                                <Spinner fx:id="beginTimeHourSpinner" prefHeight="26.0" prefWidth="71.0" />
                                                                                <Label prefHeight="28.0" prefWidth="1.0" text=":" />
                                                                                <Spinner fx:id="beginTimeMinuteSpinner" prefHeight="26.0" prefWidth="71.0" />
                                                                            </children>
                                                                        </HBox>
                                                                        <Label text="%events.search.price" />
                                                                        <TextField fx:id="priceTextField" prefHeight="26.0" prefWidth="73.0" />
                                                                        <HBox spacing="15.0" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </TitledPane>
                                                <TitledPane animated="false" layoutX="10.0" layoutY="581.0" text="%events.main.search.city">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="333.0" prefWidth="216.0">
                                                            <children>
                                                                <VBox layoutX="7.0" layoutY="10.0" prefHeight="248.0" prefWidth="198.0" spacing="10.0">
                                                                    <children>
                                                                        <Label text="%events.search.locationname" />
                                                                        <TextField fx:id="locationNameTextField" prefHeight="26.0" prefWidth="73.0" />
                                                                        <Label text="%events.search.street" />
                                                                        <HBox spacing="15.0" />
                                                                        <TextField fx:id="streetTextField" prefHeight="26.0" prefWidth="73.0" />
                                                                        <Label text="%events.search.city" />
                                                                        <TextField fx:id="cityTextField" prefHeight="26.0" prefWidth="73.0" />
                                                                        <Label text="%events.search.postalcode" />
                                                                        <TextField fx:id="postalCodeTextField" prefHeight="26.0" prefWidth="73.0" />
                                                                        <Label text="%events.search.contry" />
                                                                        <TextField fx:id="countryTextField" prefHeight="26.0" prefWidth="73.0" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </TitledPane>
                                            </panes>
                                        </Accordion>
                                        <ButtonBar maxHeight="35.0" prefHeight="35.0">
                                            <buttons>
                                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchForPerformances" text="%events.main.button.search" VBox.vgrow="ALWAYS">
                                                    <VBox.margin>
                                                        <Insets right="16.0" />
                                                    </VBox.margin>
                                                </Button>
                                            </buttons>
                                        </ButtonBar>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</VBox>
