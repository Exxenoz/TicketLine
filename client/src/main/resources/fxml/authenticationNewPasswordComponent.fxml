                               <padding>
                                   <Insets bottom="5.0" top="5.0" />
                               </padding>
                           </Separator>
                           <Label text="%authenticate.password_reset_key" />
                           <Label text="%authenticate.password" GridPane.rowIndex="3">
                               <padding>
                                   <Insets top="5.0" />
                               </padding>
                     </Label>
                           <Label text="%authenticate.password_repeat" GridPane.rowIndex="4">
                        <padding>
                           <Insets top="5.0" />
                        </padding></Label>
