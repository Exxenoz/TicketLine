                    </image>
                </ImageView>
                <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 3;">
                    <Label text="%authenticate.password_reset">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font></Label>
                    <Label text="%authenticate.password_reset_key_instructions">
                  <padding>
                     <Insets bottom="5.0" />
                  </padding></Label>
               <Label minHeight="1.0" minWidth="-Infinity" opacity="0.4" prefHeight="0.0" prefWidth="400.0" style="-fx-border-style: solid; -fx-border-width: 0 0 1 0;" />
                   <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="250.0" prefWidth="400.0" vgap="5.0">
                       <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="80.0" prefWidth="100.0" />
                           <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" />
                           <ColumnConstraints />
                       </columnConstraints>
                       <rowConstraints>
                           <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
