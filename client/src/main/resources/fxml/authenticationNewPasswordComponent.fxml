<StackPane fx:id="loginNode" styleClass="glass" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.AuthenticationNewPasswordController">
    <children>
        <Pane styleClass="background" />
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0">
