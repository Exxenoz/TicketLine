<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox spacing="5.0" xmlns:fx="http://javafx.com/fxml/1" fx:id="content" prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/10"
      fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.users.UserController">
    <children>
        <fx:include fx:id="tabHeader" source="../tabHeader.fxml"/>
        <Separator/>
        <TableView fx:id="userTable" VBox.vgrow="ALWAYS" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="usernameCol" text="%usertab.usertable.username" sortable="false"/>
                <TableColumn fx:id="useraccountStatusCol" text="%usertab.usertable.user_is_enabled" sortable="false"/>
                <TableColumn fx:id="userAuthTriesCol" text="%usertab.usertable.user_auth_tries" sortable="false"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <ButtonBar prefHeight="40.0" VBox.vgrow="ALWAYS" maxHeight="40">
            <buttons>
                <Button fx:id="passwordResetButton" disable="true" mnemonicParsing="false" onAction="#onClickResetPassword" text="%usertab.user.password_reset">
                    <HBox.margin>
                        <Insets right="16.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="toggleEnableButton"  disable="true" mnemonicParsing="false" onAction="#toggleEnable" text="%usertab.user.enable">
                    <HBox.margin>
                        <Insets right="16.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#onClickCreateUserButton" text="%usertab.user.create" />
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
